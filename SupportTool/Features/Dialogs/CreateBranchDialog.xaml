<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="SupportTool.Features.Dialogs.CreateBranchDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Create New Branch"
    PrimaryButtonText="Create &amp; Checkout"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">
    <StackPanel Spacing="12">
        <TextBlock TextWrapping="Wrap">
            <Run Text="Create and checkout branch " />
            <Run FontWeight="SemiBold" Text="{x:Bind BranchName, Mode=OneWay}" />
            <Run Text=" from:" />
        </TextBlock>
        <ComboBox
            x:Name="BaseBranchComboBox"
            ItemsSource="{x:Bind AvailableBranches, Mode=OneWay}"
            SelectedItem="{x:Bind SelectedBaseBranch, Mode=TwoWay}"
            PlaceholderText="Select base branch" />
        <InfoBar
            x:Name="ErrorInfoBar"
            IsOpen="False"
            Severity="Error"
            Title="Error"
            Message="{x:Bind ErrorMessage, Mode=OneWay}" />
    </StackPanel>
</ContentDialog>
