<Window
    x:Class="SupportTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SupportTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Support Tool"
    mc:Ignorable="d">
    <Grid>

        <Grid
            x:Name="AppTitleBar"
            Height="48"
            Margin="28,0,0,0"
            VerticalAlignment="Top"
            Canvas.ZIndex="1"
            IsHitTestVisible="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image
                Grid.Column="0"
                Width="16"
                Height="16"
                HorizontalAlignment="Left"
                Source="/Assets/mainlogo.png" />

            <StackPanel
                Grid.Column="0"
                Margin="28,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="6">
                <Viewbox
                    Width="14"
                    Height="14"
                    VerticalAlignment="Center">
                    <Path Data="M176 168C189.3 168 200 157.3 200 144C200 130.7 189.3 120 176 120C162.7 120 152 130.7 152 144C152 157.3 162.7 168 176 168zM256 144C256 176.8 236.3 205 208 217.3L208 288L384 288C410.5 288 432 266.5 432 240L432 217.3C403.7 205 384 176.8 384 144C384 99.8 419.8 64 464 64C508.2 64 544 99.8 544 144C544 176.8 524.3 205 496 217.3L496 240C496 301.9 445.9 352 384 352L208 352L208 422.7C236.3 435 256 463.2 256 496C256 540.2 220.2 576 176 576C131.8 576 96 540.2 96 496C96 463.2 115.7 435 144 422.7L144 217.4C115.7 205 96 176.8 96 144C96 99.8 131.8 64 176 64C220.2 64 256 99.8 256 144zM488 144C488 130.7 477.3 120 464 120C450.7 120 440 130.7 440 144C440 157.3 450.7 168 464 168C477.3 168 488 157.3 488 144zM176 520C189.3 520 200 509.3 200 496C200 482.7 189.3 472 176 472C162.7 472 152 482.7 152 496C152 509.3 162.7 520 176 520z" Fill="{ThemeResource TextFillColorPrimaryBrush}" />
                </Viewbox>
                <TextBlock
                    x:Name="AppTitleBarText"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Git branch name"
                    TextWrapping="NoWrap" />
            </StackPanel>

            <AutoSuggestBox
                x:Name="BranchSearchBox"
                Grid.Column="1"
                Width="400"
                Height="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                GotFocus="BranchSearchBox_GotFocus"
                PlaceholderText="Search a branch name to checkout"
                QuerySubmitted="BranchSearchBox_QuerySubmitted"
                SuggestionChosen="BranchSearchBox_SuggestionChosen"
                TextChanged="BranchSearchBox_TextChanged" />
        </Grid>

        <NavigationView
            x:Name="NavView"
            DisplayModeChanged="NavigationView_DisplayModeChanged"
            ExpandedModeThresholdWidth="1280"
            PaneDisplayMode="LeftCompact"
            SelectionChanged="NavView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="New Relic Alerting" IsExpanded="True">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7BA;" />
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Alert Manager" Tag="Alerting">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xE7BA;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                        <NavigationViewItem Content="MPM Alert Audit" Tag="NRAlertAuditMPM">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xF0B5;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                        <NavigationViewItem Content="DM Alert Audit" Tag="NRAlertAuditDM">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xF0B5;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                        <NavigationViewItem Content="Threshold Adjust" Tag="NRThresholdManager">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xECC5;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
                <!--<NavigationViewItem
                    Content="Number Ranges"
                    IsExpanded="True"
                    Tag="FLRange">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xF463;" />
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Royal Mail" Tag="FLRange_RoyalMail">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xF0B5;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>-->

            </NavigationView.MenuItems>

            <!--  Content area for the pages  -->
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>